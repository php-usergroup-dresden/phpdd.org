{% extends "Theme.twig" %}

{% block content %}

    {% for ticketConfig in ticketConfigs %}
        <div class="row">
            <div class="col-xs-4 col-sm-3 col-md-2 col-lg-2">
                <img src="{{ ticketConfig.getImage }}" alt="{{ ticketConfig.getName }}"
                     class="img-rounded img-responsive">
            </div>
            <div class="col-xs-8 col-sm-9 col-md-10 col-lg-10">
                <h4>{{ ticketConfig.getName }}</h4>
                <p>
                    {{ ticketConfig.getDescription }}
                </p>
                <p>
                    <b>{{ ticketConfig.getPrice.getMoney|formatMoney }}</b>
                    <small class="text-muted"> | {{ ticketConfig.getSeats }} seats available</small>
                </p>
                <p>
                    <small class="text-muted">
                        Available from {{ ticketConfig.getValidFrom|formatDate }}
                        to {{ ticketConfig.getValidTo|formatDate }}
                    </small>
                </p>
            </div>
        </div>
        <hr>
    {% endfor %}

{% endblock %}
